'.text.html.php.blade, .text.html.php':

  'Construct definition':
    'prefix': 'php:construct'
    'rightLabelHTML': '<span style="color:#4A90E2">PHP</span> public function __construct'
    'body': """
      public function __construct(${1:Request} $${2:request})
      {
          $this->${2:request} = $${2:request};
      }
    """

  'Full array definition':
    'prefix': 'php:arrayFull'
    'rightLabelHTML': '<span style="color:#4A90E2">PHP</span> arrayName = [key => value];'
    'body': """
      $${1:arrayName} = ['${1:name}' => '${2:value}'];
    """

  'key => value':
    'prefix': 'php:arrValue'
    'rightLabelHTML': '<span style="color:#4A90E2">PHP</span> key => value'
    'body': """
      '${1:name}' => '${2:value}',
    """

  'Trait declaration':
    'prefix': 'php:Trait'
    'rightLabelHTML': '<span style="color:#4A90E2">PHP</span> Trait'
    'body': """<?php namespace App\\\\Traits;

      /**
       * Trait ${1:TraitName}.
       */
      trait ${1:TraitName}
      {
          $2
      }

    """

  'interface Contract':
    'prefix': 'php:Contract'
    'rightLabelHTML': '<span style="color:#4A90E2">PHP</span> Interface'
    'body': """<?php namespace App\\\\Contracts${1:\\\\Subfolder};

      /**
       * Contract ${2:ContractName}...
       */
      interface ${2:ContractName}
      {
          $3
      }

    """
