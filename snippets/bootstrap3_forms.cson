".text.html.basic, .text.html.php":

  "Bootstrap3 Form - Form Group":
    "prefix":"bootstrap3:formgroup"
    "body":"""
      <div class="form-group">
        <label for="${1:name-id}">${2:Form Title}</label>
        $3
      </div>
      $6
    """

  "Bootstrap3 Form - Button Group":
    "prefix":"bootstrap3:buttonGroup"
    "body":"""
      <div class="btn-group" role="group" aria-label="${1:name-id}">
        <button type="button" class="btn btn-default">Left</button>
        <button type="button" class="btn btn-default">Middle</button>
        <button type="button" class="btn btn-default">Right</button>
      </div>
    """

  "Bootstrap3 Form - Form tag":
    "prefix":"bootstrap3:form"
    "body":"""
      <form${1: class="${2:form-inline }${3:form-horizontal }"}>
        $4
      </form>
    """

  "Bootstrap3 Form - Text input":
    "prefix":"bootstrap3:input"
    "body":"""
      <input ${1:type="$2" }${3:class="${4:form-control }${5:input-${6:lg}}$7" }${8:placeholder="$9" }${10:disabled}>
      $11
    """

  "Bootstrap3 Form - Textarea input":
    "prefix":"bootstrap3:textarea"
    "body":"""
      <textarea ${1:class="form-control$2" }${3:placeholder="$4" }${5:disabled}>$6</textarea>
      $7
    """

  "Bootstrap3 Form - Checkbox input":
    "prefix":"bootstrap3:checkbox"
    "body":"""
      <div class="checkbox${1:-inline}$2">
        <label>
          <input type="checkbox" ${3:name="$4" }${5:value="$5" }${6:checked }${7:disabled}>
          $8
        </label>
      </div>
      $9
    """

  "Bootstrap3 Form - Checkbox input Inline":
    "prefix":"bootstrap3:checkboxinline"
    "body":"""
      <div class="checkbox-inline$1">
        <label>
          <input type="checkbox" ${2:name="$3" }${4:value="$5" }${6:checked }${7:disabled}>
          $8
        </label>
      </div>
      $8
    """

  "Bootstrap3 Form - Radio input":
    "prefix":"bootstrap3:radio"
    "body":"""
      <div class="radio${1:-inline}$2">
        <label>
          <input type="radio" ${3:name="$4" }${5:value="$5" }${6:checked }${7:disabled}>
          $8
        </label>
      </div>
      $9
    """

  "Bootstrap3 Form - Inline Radio input":
    "prefix":"bootstrap3:radioinline"
    "body":"""
      <div class="radio-inline$1">
        <label>
        <input type="radio" ${2:name="$3" }${4:value="$5" }${6:checked }${7:disabled}>
          $7
        </label>
      </div>
      $8
    """

  "Bootstrap3 Form - Select input":
    "prefix":"bootstrap3:select"
    "body":"""
      <select${1: class="form-control$2"}${3: disabled}>
        $4
      </select>
      $5
    """

  "Bootstrap3 Form - Fieldset input":
    "prefix":"bootstrap3:fieldset"
    "body":"""
      <fieldset${1: class="$2"}>
        $3
      </fieldset>
      $4
    """

  "Bootstrap3 Form - Button":
    "prefix":"bootstrap3:button"
    "body":"""
      <button type="${1:submit}"${2: class="${3:btn }${4:btn-${5:lg} }${6:btn-${7:default} }$8"}>$9</button>
      $10
    """
